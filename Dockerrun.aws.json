{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "omarzaam/multi-docker-client",
            "hostname":"client",
            "essential": false
        },{
            "name": "nginx",
            "image": "omarzaam/multi-docker-nginx",
            "hostname":"nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client","server"]

        },{
            "name": "server",
            "image": "omarzaam/multi-docker-server",
            "hostname":"api",
            "essential": false
        },{
            "name": "worker",
            "image": "omarzaam/multi-docker-worker",
            "hostname":"worker",
            "essential": false
        }
        
    ]
}